{
    "$schema": "vscode://schemas/color-theme",
    "name": "purplish",
    "type": "dark",
    "colors": {
		// Activity Bar.
		"activityBar.background": "#1e1d3f",
		"activityBar.border": "#222244",
		"activityBar.foreground": "#a295eb",
		"activityBar.inactiveForeground": "#ffffff",
		"activityBarBadge.background": "#b553db",
		"activityBarBadge.foreground": "#ffffff",
		"activityBar.activeBorder": "#a295eb",
		"activityBar.activeBackground": "#222244",

		// Sidebar.
		"sideBar.background": "#1e1d3f",
		"sideBar.border": "#222244",
		"sideBar.foreground": "#ffffff",
		"sideBarSectionHeader.background": "#1e1d3f",
		"sideBarSectionHeader.foreground": "#ffffff",
		"sideBarTitle.foreground": "#ffffff",
		"sideBarSectionHeader.border": "#1e1d3f",

		// Editor 
		"editor.background": "#1e1d3f", 
		"editor.foreground": "#ffffff", 
		"editorLineNumber.foreground": "#ffffff", 
		"editorCursor.foreground": "#ffffff", 
		"editor.lineHighlightBorder": "#343463",
		//"editor.findMatchBackground":"#844acf", 			//revisit once syntax colors are chosen
		//"editor.findMatchHighlightBackground": "#ff0000",	//revisit once syntax colors are chosen -- should be slightly different than color above
		//"editor.selectionBackground": "#ff0000",			//text highlighting color -- revisit when syntax colors are chosen

		// Editor Groups & Tabs.
		"editorGroupHeader.noTabsBackground": "#1e1d3f",
		"editorGroupHeader.tabsBackground": "#1e1d3f",
		"tab.activeForeground": "#ffffff",
		"tab.border": "#1E1E3F",
		"tab.activeBorder": "#a295eb",
		"tab.inactiveBackground": "#1e1d3f",
		"tab.inactiveForeground": "#a19ac7", 				

		// Panel.
		"panel.background": "#1e1d3f",
		"panel.border": "#222244",
		"panelTitle.activeBorder": "#a295eb",
		"panelTitle.activeForeground": "#ffffff",
		"panelTitle.inactiveForeground": "#a19ac7", 	

		// Title bar
		"titleBar.activeBackground": "#1e1e3f",
		"titleBar.activeForeground": "#ffffff",
		//"descriptionForeground": "#a295eb",

		// Status Bar 
		"statusBar.background": "#6943ff", 					//might change
		"statusBar.foreground": "#ffffff",

		// Editor Widget 
		"editorWidget.background": "#1e1d3f",
		"editorWidget.border": "#a295eb",
		
		// Input Control
		"input.background": "#222244",
		"input.placeholderForeground": "#a19ac7", 		
		"inputOption.activeBackground": "#a19ac7",

		// Lists and Trees.
		//"list.dropBackground": "#2D2B55",
		"list.activeSelectionBackground": "#412f86",	
		"list.activeSelectionForeground": "#ffffff",
		"list.focusBackground": "#412f86",				
		"list.focusForeground": "#ffffff", 
		"list.hoverBackground": "#493c94",				
		"list.inactiveSelectionBackground": "#412f86", 		
		"list.inactiveSelectionForeground": "#ffffff",  

		// Quick Picker
		"pickerGroup.foreground": "#a599e9", 			//might change -- command palette recently used and other commands label
		"quickInput.foreground": "#ffffff",

		// Button and Badge
		"button.background": "#772fb1",					
		"extensionButton.prominentBackground": "#29a548", //might change
		"extensionButton.prominentHoverBackground": "#38b858",
		"badge.background": "#b553db",				
 
		// Dropdown.
		"dropdown.background": "#1e1d3f",
		"dropdown.foreground": "#ffffff",

		// Minimap
		"minimap.findMatchHighlight": "#844acf", 		
		//"minimap.selectionHighlight": "#c4ca6e"			//maybe change -- should be the same as editor selection highlight? (not sure)

		// Git Colors
		"gitDecoration.addedResourceForeground": "#1da83b",
		"gitDecoration.modifiedResourceForeground": "#e0de36",
		"gitDecoration.untrackedResourceForeground": "#1c93ca",

		// Terminal Colors
		"terminal.ansiBlack": "#000000",
		"terminal.ansiRed": "#d90429",
		"terminal.ansiGreen": "#3ad900",
		"terminal.ansiYellow": "#ffe700",
		"terminal.ansiBlue": "#6943ff",
		"terminal.ansiMagenta": "#ff2b70",
		"terminal.ansiCyan": "#00c5c7",
		"terminal.ansiWhite": "#ffffff",
		"terminal.ansiBrightBlack": "#676767",
		"terminal.ansiBrightRed": "#f9291b",
		"terminal.ansiBrightGreen": "#42d425",
		"terminal.ansiBrightYellow": "#f1d000",
		"terminal.ansiBrightBlue": "#6871ff",
		"terminal.ansiBrightMagenta": "#ff76ff",
		"terminal.ansiBrightCyan": "#79e7fa",
		"terminal.ansiBrightWhite": "#ffffff",

		// need preview colors

		// need debug colors

	},
    "tokenColors":[//8f2c8a
		{
			"scope": ["comment"],
			"settings": {
				"foreground": "#a295eb"
			}
		},

		{
			"scope": ["constant.language"],
			"settings": {
				"foreground": "#e283b2"
			}
		},

		{
			"scope": ["entity.name.function"],
			"settings": {
				"foreground": "#75cee4"
			}
		},

		{
			"scope": ["entity.name.class"],
			"settings": {
				"foreground": "#ffffff"
			}
		},

		{
			"scope": ["keyword"],
			"settings": {
				"foreground": "#ffffff"
			}
		},

		{
			"scope": ["keyword.control"],
			"settings": {
				"foreground": "#ffa9b5"
			}
		},

		{
			"scope": ["storage.type"],
			"settings": {
				"foreground": "#a23db6"
			}
		},
		
		{
			"scope": ["string"],
			"settings": {
				"foreground": "#abecc1"
			}
		},

		{
			"scope": ["support.function"],
			"settings": {
				"foreground": "#4252e9"
			}
		},

		{
			"scope": ["support.constant"],
			"settings": {
				"foreground": "#9e2828"
			}
		},

		{
			"scope": ["support.type"],
			"settings": {
				"foreground": "#ffffff"
			}
		},

		{
			"scope": ["variable"],
			"settings": {
				"foreground": "#dd95eb"
			}
		},
	]
}